{
  "identity": {
    "persona": "E1 - The Minimalist Designer",
    "archetype": "Clean & Precise (Focus, Clarity, Professionalism)",
    "vibe": "Mission Control, Tactical, High-Precision, Intelligent",
    "principles": [
      "Simplicity over Complexity: Black and gray only for maximum clarity.",
      "Emotion First: The user should feel in control and focused.",
      "Content is King: Data is the hero. Visualization is the story.",
      "Negative Space: Use white voids and black accents for balance.",
      "Contrast: High contrast text for perfect readability."
    ]
  },
  "typography": {
    "headings": {
      "family": "Outfit, sans-serif",
      "weights": ["500", "700"],
      "tracking": "tight",
      "usage": "All section titles, hero text, modal headers. DO NOT use Inter for headings."
    },
    "body": {
      "family": "Inter, sans-serif",
      "weights": ["400", "500"],
      "usage": "Paragraphs, inputs, data tables."
    },
    "code": {
      "family": "JetBrains Mono, monospace",
      "usage": "Token IDs, API keys, logs, code snippets."
    },
    "installation": "yarn add @fontsource/outfit @fontsource/inter @fontsource/jetbrains-mono"
  },
  "colors": {
    "theme": "light",
    "palette": {
      "background": "0 0% 98%",
      "foreground": "0 0% 10%",
      "card": "0 0% 100%",
      "card_foreground": "0 0% 10%",
      "popover": "0 0% 100%",
      "popover_foreground": "0 0% 10%",
      "primary": "0 0% 0%",
      "primary_foreground": "0 0% 100%",
      "secondary": "0 0% 95%",
      "secondary_foreground": "0 0% 15%",
      "muted": "0 0% 92%",
      "muted_foreground": "0 0% 50%",
      "accent": "0 0% 94%",
      "accent_foreground": "0 0% 15%",
      "destructive": "0 0% 0%",
      "destructive_foreground": "0 0% 98%",
      "border": "0 0% 90%",
      "input": "0 0% 95%",
      "ring": "0 0% 0%",
      "chart_1": "0 0% 0%",
      "chart_2": "0 0% 50%",
      "chart_3": "0 0% 40%",
      "chart_4": "0 0% 60%",
      "chart_5": "0 0% 0%"
    },
    "special_colors": {
      "primary_black": "#000000",
      "dark_gray": "#1A1A1A",
      "medium_gray": "#808080",
      "light_gray": "#D3D3D3",
      "void_black": "#050505",
      "glass_border": "rgba(0, 0, 0, 0.1)"
    }
  },
  "layout_strategy": {
    "grid_system": "Bento Grid (Mode B: High Density)",
    "spacing": "Generous (p-6, p-8) internally, but tight gaps (gap-4) for dashboard density.",
    "container_style": "Fluid width with max-w-7xl for main content.",
    "modes": {
      "dashboard": "Grid with col-span-1 for stats, col-span-2/3 for charts, col-span-1 for activity feeds.",
      "marketing": "Asymmetric 'Tetris' grid for features. Overlapping elements."
    }
  },
  "surface_strategies": [
    {
      "name": "The Tracing Beam",
      "usage": "Active Agent Cards, Pricing Plans, Key Features",
      "implementation": "Animated gradient border using framer-motion or CSS mask-image (black/gray)."
    },
    {
      "name": "Glassmorphism (Crystal)",
      "usage": "Sidebar, Sticky Header, Modals",
      "implementation": "bg-black/60 backdrop-blur-xl border-white/10"
    },
    {
      "name": "Grid Borders (Technical)",
      "usage": "Data Tables, Logs, Footer",
      "implementation": "border-r border-b border-white/5"
    }
  ],
  "components": {
    "buttons": {
      "style": "Sharp or slightly rounded (rounded-md).",
      "primary": "bg-black hover:bg-gray-900 text-white shadow-[0_0_15px_rgba(0,0,0,0.5)]",
      "secondary": "bg-gray-200 hover:bg-gray-300 text-black border border-gray-400"
    },
    "cards": {
      "style": "Minimal borders, generous padding.",
      "background": "white or light-gray",
      "border": "1px solid rgba(0, 0, 0, 0.08)"
    },
    "inputs": {
      "style": "Clean, minimal.",
      "background": "#F3F1ED",
      "border": "1px solid rgba(0, 0, 0, 0.08)",
      "focus": "border-black outline-none"
    }
  },
  "animations": {
    "duration": "200ms-300ms",
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
    "effects": [
      "Fade in/out",
      "Slide up/down",
      "Scale (subtle)",
      "Pulse (black/gray only)"
    ]
  },
  "accessibility": {
    "contrast_ratio": "WCAG AAA (7:1 minimum)",
    "focus_indicators": "2px solid black outline",
    "reduced_motion": "Disable all animations when prefers-reduced-motion is set"
  }
}
