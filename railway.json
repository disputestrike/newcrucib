{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start:prod",
    "restartPolicyMaxRetries": 5
  },
  "variables": {
    "PORT": "3000",
    "NODE_ENV": "production",
    "PYTHONUNBUFFERED": "1"
  }
}
