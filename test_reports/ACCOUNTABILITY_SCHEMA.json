{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EnterpriseTestRun",
  "description": "Accountability tracking for test failures (Part 4 of Enterprise Testing Framework)",
  "type": "object",
  "properties": {
    "testName": { "type": "string", "description": "Layer or test suite name" },
    "status": { "type": "string", "enum": ["PASSED", "FAILED", "WARN", "SKIPPED"] },
    "failureReason": { "type": "string" },
    "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"] },
    "detectedBy": { "type": "string" },
    "involvedParties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": { "type": "string" },
          "name": { "type": "string" },
          "action": { "type": "string" }
        }
      }
    },
    "rootCause": { "type": "string" },
    "autoFixApplied": { "type": "boolean" },
    "manualFixRequired": { "type": "boolean" },
    "correctiveAction": { "type": "string" },
    "deadline": { "type": "string" },
    "notification": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "recipients": { "type": "array", "items": { "type": "string" } },
        "priority": { "type": "string" }
      }
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "pipelineRunId": { "type": "string" }
  },
  "required": ["testName", "status", "timestamp"]
}
